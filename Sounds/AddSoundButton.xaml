<UserControl x:Class="Marakas.Sounds.AddSoundButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Marakas.Sounds"
             mc:Ignorable="d" 
             d:DesignHeight="90" d:DesignWidth="90">
    <Border Background="#212121" BorderBrush="Silver" Margin="5 5 5 5" Width="80" Height="80" CornerRadius="8,8,8,8" BorderThickness="1">
        <StackPanel Orientation="Vertical">
            <Button Click="SoundBtn_AddSound" Background="Transparent" BorderBrush="Transparent" BorderThickness="0" Height="78" Width="78" Padding="0">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Background="Transparent" Height="78" Width="78">
                    <Image Source="pack://application:,,,/Images/plus.png" Width="40" Margin="0 10 0 10"/>
                    <Border BorderBrush="Silver" BorderThickness="1" Width="78" Height="1"></Border>
                    <TextBlock Foreground="White" MaxWidth="70" Width="Auto" TextTrimming="CharacterEllipsis" FontSize="10" FontWeight="Bold" TextAlignment="Center">Ajouter</TextBlock>
                </StackPanel>
            </Button>
        </StackPanel>
    </Border>
</UserControl>
